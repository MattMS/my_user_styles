@-moz-document regexp("https?://(en|simple).wikipedia.org/wiki/.*")
	@import "_colours"

	// See note on selectors in main README.
	// DOM structure in pages/Wikipedia_article.jade

	Ubuntu = "Ubuntu"

	div#footer[role="contentinfo"]
	div#mw-head-base.noprint
	div#mw-page-base.noprint
	div#mw-navigation
	div#siteSub
		display none

	div#content.mw-body[role="main"]
	div#toc.toc
	table.ambox
	table.wikitable
	table.vertical-navbox
	.catlinks
	.infobox
	.NavHead
	.toccolours
	code
		background-color transparent
		color inherit

	body.mediawiki
		background-color base02
		color base0
		font-family Ubuntu
		margin 0 auto
		max-width 48em

	div#content.mw-body[role="main"]
		border-style none
		margin-left 0

		h1#firstHeading.firstHeading
		h2
		h3
		h4
		h5
		h6
			background-color transparent
			color inherit
			font-family inherit

	a
		color #a6e22e

	a:visited
		color #aaf

	table.wikitable
		> tr > th
		> * > tr > th
		th[scope="col"]
			background-color transparent
			color inherit

	a.new
	div.thumbinner
		background-color transparent
		color inherit

	.mwe-math-fallback-png-inline.tex
	img.tex
		background-color #fff
		color #000
		padding 0.5em

	.infobox
	.infobox th
		background-color transparent

	#bodyContent
	.mw-body-content
		font-size 1em
